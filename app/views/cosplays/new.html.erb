<div class="container">
  <div class="form-container">
    <h1>Add a Cosplay</h1>
    <%= simple_form_for @cosplay do |f| %>
      <%= f.input :name %>
      <%= f.input :source_material %>
      <%= f.input :price, input_html: { min: 0, step: 500} %>
      <%= f.input :size, as: :select, collection: Cosplay::SIZE %>
      <%= f.input :images, input_html: { multiple: true }, as: :file %>
      <%= f.button :submit, class: "btn btn-primary text-white w-100 my-3" %>
    <% end %>
  </div>
</div>
