<div class="container mt-5">
  <div class="cosplay-show-card">
    <h1 class="title"><%= @cosplay.name %></h1>
    <div class="carousel-container my-3">
      <div id="pictureCarousel" class="carousel slide">
        <div class="carousel-inner">
          <div class="carousel-item active" style="background-image: url(<% if @cosplay.image.attached? %>
                <%= cl_image_path(@cosplay.image.key) %>
              <% else %>
                <%= image_tag "logo.png", alt: "default" %>
              <% end %>);">
          </div>
          <div class="carousel-item" style="background-image: url(<% if @cosplay.image.attached? %>
                <%= cl_image_path(@cosplay.image.key) %>
              <% else %>
                <%= image_tag "logo.png", alt: "default" %>
              <% end %>);">
          </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#pictureCarousel" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#pictureCarousel" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
    </div>
    <div class="cosplay-info-and-booking-form">
      <div class="cosplay-info d-flex flex-column">
        <p>Source: <%= @cosplay.source_material %></p>
        <p><%= @cosplay.price %> Â¥ / Per day</p>
        <p>Size: <%= @cosplay.size %></p>
        <%= link_to "Book Now", new_cosplay_booking_path(@cosplay), class: "button btn-booking" %>
      </div>
      <div class="booking-form">
      </div>
    </div>
  </div>
</div>
