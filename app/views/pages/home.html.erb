<%# <div class="banner">
  <div class="banner-text">
    <h1>CosHub</h1>
    <p>Cosplay delivery, to your door, lightning fast</p>
  </div>
</div> %>
<div class="banner">
  <div class="banner-infos mt-3">
    <div class="banner-infos-left"></div>
    <div class="banner-infos-right">
      <p class="slogan">Book any cosplay you want with CosHub:</p>
      <%= link_to "All our cosplays", cosplays_path(), class: "index-link btn btn-outline-warning"  %>
    </div>
  </div>
  <div class="curve"></div>
</div>
<div class="container" style="z-index: 5; position: relative;">
  <h1 class="recent-cosplay-title mb-3">Most recent cosplays:</h1>
  <div class="d-flex justify-content-center">
    <div class="card-container">
      <% if @cosplays.any? %>
        <% @cosplays.last(7).each do |cosplay| %>
          <%= link_to cosplay_path(cosplay), class:"card-link" do %>
            <div class="homepage-card" style="background-image: url( <%= cosplay.images.attached? ? cl_image_path(cosplay.images.first.key) : image_path("logo.png") %> )">
              <h3> <%= cosplay.name %> </h3>
            </div>
          <% end %>
        <% end %>
      <% else %>
        <em>Sorry, no cosplays found!</em>
      <% end %>
    </div>
  </div>
  <h1 class="recent-cosplay-title mb-3 mt-5">Some Cosplays for You:</h1>
  <div class="d-flex justify-content-center">
    <div class="card-container">
      <% if @cosplays.any? %>
        <% @cosplays.sample(7).each do |cosplay| %>
          <%= link_to cosplay_path(cosplay), class:"card-link" do %>
            <div class="homepage-card" style="background-image: url( <%= cosplay.images.attached? ? cl_image_path(cosplay.images.first.key) : image_path("logo.png") %> )">
              <h3> <%= cosplay.name %> </h3>
            </div>
          <% end %>
        <% end %>
      <% else %>
        <em>Sorry, no cosplays found!</em>
      <% end %>
    </div>
  </div>
</div>
</div>
