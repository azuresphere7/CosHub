<div class="container">
  <h1 class="w-50">Your Bookings</h2>
  <% @bookings.order(start_date: :asc).each do |booking| %>
    <div class="booking-card border w-50 d-flex">
      <div class="cosplay-photo">
        <% if booking.cosplay.image.attached? %>
          <%= cl_image_tag(booking.cosplay.image.key, width: 200, height: 200) %>
        <% else %>
          <%= image_tag "logo.png", alt: "default" %>
        <% end %>
      </div>
      <div class="booking-infos">
        <h3><%= booking.cosplay.name  %></h3>
        <h5><%= booking.cosplay.source_material %></h5>
        <div class="booking-details">
          <p>Size: <%= booking.cosplay.size %></p>
          <p>Price: <%= booking.cosplay.price %>Â¥ / Per day</p>
          <p>From: <%= booking.start_date %>, To: <%= booking.end_date %></p>
        </div>
        <p><%= booking.status %></p>
      </div>
    </div>
  <% end %>
</div>
